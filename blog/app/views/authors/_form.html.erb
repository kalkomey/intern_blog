<% if author.errors.any? %>
  <ul>
    <% author.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for author do |f| %>
  <div class="form-group">
    <%= f.label 'Full Name' %>
    <%= f.text_field :full_name, class: "form-control", placeholder: "Full Name" %>
  </div>
  <div class="form-group">
    <%= f.label 'Date of Birth' %>
    <%= f.date_field :dob, class: "form-control", placeholder: "Date of Birth" %>
  </div>
  <%= f.submit f.object.persisted? ? 'Save' : 'Create', class: "btn btn-primary" %>
  <%= link_to 'Back', :back, class: "btn btn-light" %>
<% end %>
